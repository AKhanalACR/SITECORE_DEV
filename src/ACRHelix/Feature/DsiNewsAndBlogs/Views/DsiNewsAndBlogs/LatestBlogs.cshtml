@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<ACRHelix.Feature.DsiNewsAndBlogs.ViewModels.RecentBlogListViewModel>


<div acr="list" style="padding:30px;--gap:15px;">
    <h3 acr>@Editable(x => x.Title)</h3>
    <div acr="list" style="--gap: 15px;">
        
            @foreach (var blogArticle in Model.NewsArticles)
            {
                using (BeginEditFrame(blogArticle, "Blog Article", x => x.Title, x => x.SubTitle, x => x.Type, x => x.StartDate, x => x.Image, x => x.TileText))
                {
                    <div acr="list-column" class="blog-summary">
                        @if (blogArticle.Image != null)
                        {
                            @RenderImage(blogArticle, x => x.Image, new { @style = "width:100px;height:100px;" })
                        }
                        else
                        {
                            <img src="/images/DsiNewsAndBlogs/Blog.JPG" />
                        }
                        @if (!string.IsNullOrWhiteSpace(blogArticle.LinkOverride))
                        {
                            <a href="@blogArticle.LinkOverride" acr="link">@Editable(blogArticle, x => x.Title)</a>
                        }
                        else
                        {
                            <a href="@blogArticle.Url" acr="link">@Editable(blogArticle, x => x.Title)</a>
                        }
                    </div>
                }
            }
        </div>
        @RenderLink(Model, x => x.ArchivesLink, new { @acr = "btn", @class="new-home-page-btn" }, isEditable: true)   
</div>
