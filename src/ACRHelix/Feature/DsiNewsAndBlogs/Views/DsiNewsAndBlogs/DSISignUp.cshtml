@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<ACRHelix.Feature.DsiNewsAndBlogs.Models.SignUpBlogUpdate>
<div class="full section-style-1">
    <div style="max-width:1062px; margin:auto;">
        <div acr="list-column-between-alt" class="v-center limit" style="--gap:15px;padding:30px 0;">
            <h2 acr>@Editable(x => x.Title)</h2>
            <div acr="list-column" style="--gap:0;">
                <input type="hidden" value="@Editable(x => x.ButtonLink.Url)" id="subscribeUrl">
                <input id="txtEmail_DSISubscribe" type="text"
                       style="color: #333333 !important; font-family: freight-sans-pro, sans-serif !important; font-weight: normal !important; font-style: italic !important;"
                       class="input" placeholder="Enter email address">
                <div acr="btn" , style="width:unset;" id="btn_DSISubscribe">
                    @Editable(x => x.ButtonText)
                </div>
            </div>
        </div>
    </div>
</div>
