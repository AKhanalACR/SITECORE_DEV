@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<ACRHelix.Feature.RadPACContent.ViewModels.TwitterFeedsViewModel>
@using Sitecore.Foundation.SitecoreExtensions.Extensions

<section>
    <div class="tweets">
        <div class="container">
            <div class="row mb-5">
                <div class="col-md-6 offset-md-3 col-sm-12">
                    <a class="twitter-timeline" data-width="@Model.Width" data-height="@Model.Height" href="@Model.TimelineUrl" data-tweet-limit="@Model.TweetsDisplay"></a>
                    <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
                </div>
            </div>
        </div>
    </div>
</section>
