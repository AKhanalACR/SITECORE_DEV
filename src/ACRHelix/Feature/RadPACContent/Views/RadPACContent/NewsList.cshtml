@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<ACRHelix.Feature.RadPACContent.ViewModels.NewsListViewModel>
@using Sitecore.Foundation.SitecoreExtensions.Extensions

<section>
    <div class="links pt-10">
        <div class="container">
            @if (!string.IsNullOrWhiteSpace(Model.Title) || Sitecore.Context.PageMode.IsExperienceEditor)
            {
                <div class="section-header">
                    <h2 class="header-style"><span class="underline-red"><span>@Editable(x => x.Title)</span></span><hr class="hr-style-red" /></h2>
                </div>
            }
            @if (Model.NewsArticles.Count() > 0)
            {
                foreach (var article in Model.NewsArticles)
                {
                    if (!string.IsNullOrWhiteSpace(article.Title))
                    {
                        <div class="pb-20">
                            <p class="blue"><a href="@article.Url">@article.Title <i class="fa fa-angle-double-right" aria-hidden="true"></i></a></p>
                            @if (!string.IsNullOrWhiteSpace(article.SubTitle))
                            {
                                <p>@article.SubTitle</p>
                            }
                        </div>

                    }

                }
            }
            
        </div>
    </div>
</section>
