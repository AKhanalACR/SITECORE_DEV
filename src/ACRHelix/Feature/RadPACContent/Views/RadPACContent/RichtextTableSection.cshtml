@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<ACRHelix.Feature.RadPACContent.ViewModels.RichtextSectionViewModel>
@using Sitecore.Foundation.SitecoreExtensions.Extensions

<section> 
    <div class="container">
        @if (!string.IsNullOrWhiteSpace(Model.Title) || Sitecore.Context.PageMode.IsExperienceEditor)
        {
            <div class="col-12">
                <div class="section-header">
                    <h2 class="header-style"><span class="underline-red"><span>@Editable(x => x.Title)</span></span><hr class="hr-style-red"></h2>
                </div>
            </div>
        }
            <div class="row">

                @if (!string.IsNullOrWhiteSpace(Model.RichText) || Sitecore.Context.PageMode.IsExperienceEditor)
                {
                    <div class="has-acr-table hide-left-btn">
                        <div class="in-view-wrapper">
                            @Editable(x => x.RichText)
                        </div>
                    </div>
                }
            </div>
    </div>    
</section>
