@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<ACRHelix.Feature.ContentSlider.ViewModels.ContentSliderViewModel>

<!--start: Module -->
<div class="content carousel-slider-outer">
    <div class="relative">
        <div id="slider-content-area">
            <div class="carousel-slide-content">
                <div class="content row">
                    <div class="xl-wide-5 lg-wide-6 wide-12 carousel-slide-content-inner">
                        <div class="slide-transition-content"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div role="slider" class="@Model.SliderClass">
        @foreach (var item in Model.Slides)
        {
        <section class="slick-slide carousel-slide">
            <div class="carousel-slide-img-holder">
                @Editable(item, x => x.Image)
            </div>
            <div class="carousel-slide-text-area">
                @if (!string.IsNullOrWhiteSpace(item.AlertText))
                {
                <div class="news-type-tag wide-12">@Editable(item, x => x.AlertText)</div>
                }
                <h1>@Editable(item, x => x.Title)</h1>
                <div class="carousel-slide-text">
                    @Editable(item, x => x.Text)
                    @RenderLink(item, x => x.Link, isEditable: true)
                </div>
            </div>
        </section>
        }
    </div>
    <div class="content row">
        <div class="xl-wide-5 lg-wide-6">
            <div class="relative">
                <div class="carousel-slider-nav">
                    <div class="carousel-slider-dots"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--end: Module -->
