@using Glass.Mapper.Sc.Web.Mvc
@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<ACRHelix.Feature.RhecContent.ViewModels.ResourcesHomePageViewModel>

@{
    int itemCount = Model.Topics.Count();
}

@if (itemCount > 0)
{
    foreach (var item in Model.Topics)
    {        
            using (BeginRenderLink(item, x => x.redirectUrl, new { @class = "topic" }, isEditable: true))
            {
                @RenderImage(item, m => m.Image, new { @class = "org-logo" }, isEditable: true)
            }        
    }
}

