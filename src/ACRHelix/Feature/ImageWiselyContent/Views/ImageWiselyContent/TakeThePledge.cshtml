@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<ACRHelix.Feature.ImageWiselyContent.ViewModels.TakeThePledgeViewModel>
@if (Model.Content != null)
{
    <!-- BEGIN NOINDEX -->
    <section class="readyPlege text-center">
        <div class="background"></div>
        <div class="container">
            <div class="row">
                @if (!string.IsNullOrWhiteSpace(Model.Content.Title))
                {
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <h1>@Editable(x => x.Content.Title)</h1>
                    </div>
                }

                <div class="col-sm-6 col-md-6 col-lg-6">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            @if (Model.Content.MenuItems.Count() > 0)
                            {
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@Html.Raw(Model.Content.DdlHeadText) <span class="fa fa-angle-down"></span></a>
                                <ul class="dropdown-menu">
                                    @foreach (var item in Model.Content.MenuItems)
                                    {
                                        <li><a href="@item.Link.Url">@item.Title <i class="fa fa-angle-double-right"></i></a></li>
                                    }
                                </ul>
                            }
                        </li>

                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- END NOINDEX -->
}


