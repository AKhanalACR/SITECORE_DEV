@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<ACRHelix.Feature.ImageWiselyContent.ViewModels.GroupPledgeFormViewModel>
@using ACRHelix.Feature.ImageWiselyContent.Helpers

<section class="padding-b-0 imaging-fromblock">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1">
                <h3 class="padding-b-20 annual-pledge-h3">
                    @Editable(m => m.SubTitle)
                </h3>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.Label("Association or Educational Program Name", new { @class = "required" })
                                @Html.TextBoxFor(m => m.GroupPledge.FacilityName, new { @placeholder = @Html.DisplayNameFor(m => m.GroupPledge.FacilityName), @class = "form-control", @autocomplete = "smartystreets", @maxlength = "255" })
                                @Html.ValidationMessageFor(m => m.GroupPledge.FacilityName)
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.GroupPledge.City, new { @class = "required" })
                                @Html.TextBoxFor(m => m.GroupPledge.City, new { @placeholder = @Html.DisplayNameFor(m => m.GroupPledge.City), @class = "form-control", @autocomplete = "smartystreets", @maxlength = "100" })
                                @Html.ValidationMessageFor(m => m.GroupPledge.City)
                            </div>
                        </div>
                    </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.GroupPledge.Countries)
                                    @Html.DropDownListFor(m => m.GroupPledge.Country, Model.GroupPledge.Countries, new { @id = "Country" })
                                </div>
                            </div>
                            <div id="statesSection" class="col-md-6">
                                <div class="form-group">
                                    <label for="State" class="required">State</label>
                                    @Html.DropDownListFor(m => m.GroupPledge.State, Model.GroupPledge.States, new { @id = "State" })
                                    @*<select id="State" name="State"></select>*@

                                </div>
                            </div>
                            <div id="provincesSection" class="col-md-6">
                                <div class="form-group">
                                    <label for="Province" class="required">Province</label>
                                    @Html.DropDownListFor(m => m.GroupPledge.Province, Model.GroupPledge.Provinces, new { @id = "Province" })
                                    @*<select id="Province" name="Province"></select>*@
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <h3>Individual taking pledge on behalf of the Association or Educational Program:</h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.GroupPledge.FirstName, new { @class = "required" })
                                    @Html.TextBoxFor(m => m.GroupPledge.FirstName, new { @placeholder = @Html.DisplayNameFor(m => m.GroupPledge.FirstName), @class = "form-control", @autocomplete = "smartystreets", @maxlength = "50" })
                                    @Html.ValidationMessageFor(m => m.GroupPledge.FirstName)
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.GroupPledge.LastName, new { @class = "required" })
                                    @Html.TextBoxFor(m => m.GroupPledge.LastName, new { @placeholder = @Html.DisplayNameFor(m => m.GroupPledge.LastName), @class = "form-control", @autocomplete = "smartystreets", @maxlength = "100" })
                                    @Html.ValidationMessageFor(m => m.GroupPledge.LastName)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.GroupPledge.Title)
                                    @Html.TextBoxFor(m => m.GroupPledge.Title, new { @placeholder = @Html.DisplayNameFor(m => m.GroupPledge.Title), @class = "form-control", @autocomplete = "smartystreets", @maxlength = "200" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.GroupPledge.Email, new { @class = "required" })
                                    @Html.TextBoxFor(m => m.GroupPledge.Email, new { @placeholder = @Html.DisplayNameFor(m => m.GroupPledge.Email), @class = "form-control", @autocomplete = "smartystreets", @maxlength = "255" })
                                    @Html.ValidationMessageFor(m => m.GroupPledge.Email)
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.GroupPledge.ConfirmEmail, new { @class = "required" })
                                    <span style="display:block;margin-bottom:7px">&nbsp;</span>
                                    @Html.TextBoxFor(m => m.GroupPledge.ConfirmEmail, new { @placeholder = @Html.DisplayNameFor(n => n.GroupPledge.ConfirmEmail), @class = "form-control", @autocomplete = "smartystreets", @maxlength = "255" })
                                    @Html.ValidationMessageFor(m => m.GroupPledge.ConfirmEmail)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.CheckBoxFor(m => m.GroupPledge.IsDisplayOnHonorRoll)
                                    @Html.Label("Display my Association or Educational Program on the honor roll")
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.GoogleCaptcha()
                                    @Html.InvalidGoogleCaptchaLabel()
                                </div>
                            </div>
                        </div>
                        <div class="text-center float-e-margins extra-padding-t-b">
                            <button type="submit" class="btn btn-primary">@Editable(m => m.ButtonText)</button>
                        </div>
                }
            </div>
        </div>
    </div>
</section>

