@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<ACRHelix.Feature.StaffDirectory.ViewModels.StaffDirectoryViewModel>
@using Sitecore.Mvc;
@using ACRHelix.Foundation.EditFrames;

@if (Sitecore.Context.PageMode.IsExperienceEditor)
{
    <style>
        .staff-directory .scLooseFrameZone {
            width: 33%;
        }

        .staff-directory div.scLooseFrameZone .xl-col-4 {
            width: 100%;
        }
    </style>
}

<section class="staff-directory content">
    <header class="header-underrule">
        <h2>@Editable(x => x.Title)</h2>
    </header>

    <!--start: Module -->
    <section class="content indented-section">
        <div class="section-spacing flex-content-left spaced-column-area">
            @foreach (var item in Model.Biographies)
            {
                using (BeginEditFrame(item, "Biography", x => x.Title, x => x.SubTitle, x => x.BioImage, x => x.OtherPositions, x => x.RichText, x => x.Phone, x => x.Email))
                {
                    <div class="xl-col-4 md-col-6 xl-col-4 md-col-6 directory-item">
                        @if (item.BioImage != null || Sitecore.Context.PageMode.IsExperienceEditorEditing)
                        {
                            if (item.DisplayDetailLink)
                            {
                                <a href="@item.URL">
                                    <figure class="text-center directory-img">
                                        @*<img src="http://placehold.it/360x360" alt="Image Size: 360 x 360px">*@
                                        @RenderImage(item, x => x.BioImage, isEditable: true)
                                        <br>
                                    </figure>
                                </a>
                            }
                            else
                            {
                                <figure class="text-center directory-img">
                                    @*<img src="http://placehold.it/360x360" alt="Image Size: 360 x 360px">*@
                                    @RenderImage(item, x => x.BioImage, isEditable: true)
                                    <br>
                                </figure>
                            }

                        }
                        @if (item.Title != "" || Sitecore.Context.PageMode.IsExperienceEditorEditing)
                        {
                            <h3 class="underline-orange">
                                @if (item.DisplayDetailLink)
                                {
                                    <a href="@item.URL">
                                        @Editable(item, x => x.Title)
                                    </a>
                                }
                                else
                                {
                                    @Editable(item, x => x.Title)
                                }
                            </h3>
                        }
                        <div class="text-content">
                            @if (item.SubTitle != "" || Sitecore.Context.PageMode.IsExperienceEditorEditing)
                            {
                                <strong>@Editable(item, x => x.SubTitle)</strong>
                                <br>
                            }
                            @if (item.OtherPositions != "" || Sitecore.Context.PageMode.IsExperienceEditorEditing)
                            {
                                @Editable(item, x => x.OtherPositions)
                                <br>
                            }
                            @if ((( !string.IsNullOrEmpty(item.GroupPracticeName) || !string.IsNullOrEmpty(item.ParentOrganization)) && Model.UserAuthenticated) || Sitecore.Context.PageMode.IsExperienceEditorEditing)
                            {
                                <ul class="block-li directory-contact" style="margin-top: 0px;">
                                    <li>
                                        @if ((!string.IsNullOrEmpty(item.GroupPracticeName) && Model.UserAuthenticated) || Sitecore.Context.PageMode.IsExperienceEditorEditing)
                                        {
                                            string groupPractice = "Group practice: ";
                                            @groupPractice
                                            @Editable(item, x => x.GroupPracticeName)
                                            <br>
                                        }
                                        @if ((!string.IsNullOrEmpty(item.ParentOrganization)  && Model.UserAuthenticated) || Sitecore.Context.PageMode.IsExperienceEditorEditing)
                                        {
                                            string parentOrganization = "Parent organization: ";
                                            @parentOrganization
                                            @Editable(item, x => x.ParentOrganization)
                                            <br>
                                        }
                                    </li>
                                </ul>
                                <br>
                            }
                            @{
                                bool displayEmailPhone = false;
                                if (!Model.HideEmailPhone)
                                {
                                    displayEmailPhone = true;
                                }
                                else
                                {
                                    if (Model.UserAuthenticated || Sitecore.Context.PageMode.IsExperienceEditor)
                                    {
                                        displayEmailPhone = true;
                                    }
                                }
                                if (displayEmailPhone)
                                {
                                    <ul class="block-li directory-contact">
                                        @if (item.Phone != "" || Sitecore.Context.PageMode.IsExperienceEditorEditing)
                                        {
                                            <li>
                                                <a href="tel:@item.Phone">
                                                    <span class="acr-icon icon-phone text-orange"></span> @Editable(item, x => x.Phone)
                                                </a>
                                            </li>
                                        }
                                        @if (item.Email != "" || Sitecore.Context.PageMode.IsExperienceEditorEditing)
                                        {
                                            <li>
                                                <a href="mailto: @item.Email">
                                                    <span class="acr-icon icon-email text-orange"></span> @Editable(item, x => x.Email)
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                }
                            }
                        </div>
                    </div>
                }
            }
        </div>
    </section>
</section>