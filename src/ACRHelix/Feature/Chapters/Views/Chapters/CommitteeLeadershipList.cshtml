@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<ACRHelix.Feature.Chapters.ViewModels.CommitteeMemberList>

@if (Model.Leadership != null)
{
<section class="staff-directory content">
    <header class="header-underrule">
        <h2>Leadership &amp; Staff</h2>
    </header>

    <section class="content indented-section">
        <div class="section-spacing flex-content-left spaced-column-area">
            
            @foreach (var leader in Model.Leadership)
            {
                <div class="xl-col-4 md-col-6 xl-col-4 md-col-6 directory-item">
                    <h3 class="underline-orange">@leader.Name</h3>
                    <div class="text-content">
                        <strong>@leader.Position</strong>
                    </div>
                </div>
            }
        </div>
    </section>
    </section>
}
