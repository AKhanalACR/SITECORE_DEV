@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<ACRHelix.Feature.Chapters.ViewModels.ChapterOfficers>

@if (Model.Officers.Count > 0)
{
    <section class="staff-directory content">
        <header class="header-underrule">
            <h2>Officers</h2>
        </header>

        <section class="content indented-section">
            <div class="section-spacing flex-content-left spaced-column-area">

                @foreach (var member in Model.Officers)
                {
                    <div class="xl-col-4 md-col-6 xl-col-4 md-col-6 directory-item">
                        <h3 class="underline-orange">@member.MemberName</h3>
                        <div class="text-content">
                            <strong>@member.Position</strong>
                        </div>
                    </div>
                }
            </div>
        </section>
    </section>
}
