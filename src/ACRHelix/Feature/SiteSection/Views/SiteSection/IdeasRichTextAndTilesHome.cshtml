@using Glass.Mapper.Sc.Web.Mvc;
@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<ACRHelix.Feature.SiteSection.Models.IdeasRichTextAndTilesModel>
@{
    string lobjClass = string.Empty;
}
@if (Sitecore.Context.PageMode.IsExperienceEditor)
{
    <div style="width:100%; height:20px"></div>
}
<div class="info">
    <div class="container">
        <h1 class="blue">@Html.Glass().Editable(x => x.Title)</h1>
        <h3>@Html.Glass().Editable(x => x.Subtitle)</h3>
            <div class="row">
                @foreach (var item in Model.SelectedTiles.Select((value, index) => new { index, value }))
                {
                    lobjClass = string.Empty;
                    //If the tile count is less than 3 the tile(s) will still be center aligned
                    if (Model.SelectedTiles.Count() > 0 && Model.SelectedTiles.Count() == 1 && item.index == 0)
                    {
                        lobjClass = "offset-lg-4";
                    }
                    else if (Model.SelectedTiles.Count() > 0 && Model.SelectedTiles.Count() == 2 && item.index == 0)
                    {
                        lobjClass = "offset-lg-2";
                    }

                    <div class="col-12 col-md-6 col-lg-4 @lobjClass">
                        <div class="card d-flex @(item.value.TileColor != null ? item.value.TileColor.Phrase : "")">
                            <div class="card-body align-items-center d-flex justify-content-center">
                                <a href="@(item.value.TileLink != null ? item.value.TileLink.Url : "#")">
                                    <p class="card-text">@Html.Raw(item.value.TileText) <i class="icon-animation fa fa-angle-double-right" aria-hidden="true"></i></p>
                                </a>
                            </div>
                        </div>
                    </div>

                }
            </div>

</div>
</div>