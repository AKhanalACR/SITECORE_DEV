@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<ACRHelix.Feature.IdeasContent.Models.IdeasPatientTitle2Column>
   
 
<div class="container" id="PatientsTitleColumn">

    <h2 class="purple col-12" style="margin-bottom:2%"> @Editable(x => x.Title)</h2>
    <div class="row">

        <div class="col-12 col-md-6 col-lg-6 ">
            <div class="ibox">
                <div class="ibox-title">

                    <h5 class="centeriboxtitle">@RenderImage(x => x.FirstColumnIcon, new { @class = "ibox-icon" }, isEditable: true) <span>@Editable(x => x.FirstColumnTitle)</span></h5>
                </div>
                <div class="ibox-content">
                    <div class="centeriboxcontent">
                        @Editable(x => x.FirstColumnText)
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-6 ">
            <div class="ibox">
                <div class="ibox-title">

                    <h5 class="centeriboxtitle">@RenderImage(x => x.SecondColumnIcon, new { @class = "ibox-icon" }, isEditable: true) <span>@Editable(x => x.SecondColumnTitle)</span></h5>
                </div>
                <div class="ibox-content">
                    <div class="centeriboxcontent">
                        @Editable(x => x.SecondColumnText)
                    </div>
                </div>
            </div>
        </div>


    </div>
 
</div>
