@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<ACRHelix.Feature.MembershipTestimonials.ViewModels.TestimonialDetailsViewModel>

<section class="content">
    <div class="content margin-side-p20">
        <div class="content row ts-cont" style="padding: 0 15px;">
            <h1 id="myModalLabel">@Model.DetailTestimonial.FullName</h1>
            <div class="row-adjust">
                @if (!string.IsNullOrEmpty(Model.DetailTestimonial.YouTubeLink))
                {
                    <input type="hidden" id="mtdVideoUrl" value="@Model.DetailTestimonial.YouTubeLink" />
                    <div class="xl-col-5 md-col-6 modal-member-portrait"> @*xl-col-5 md-col-6 video *@
                        <div class="video">
                            @Html.Raw(GlassHtml.RenderImage(Model, x => x.DetailTestimonial.ProfileImage, new { width = "284" }, true, false))
                            <!-- <iframe width="250" height="250" src="https://www.youtube.com/embed/i3Mwcphtz4w?autoplay=1" frameborder="0" allowfullscreen="allowfullscreen" mozallowfullscreen="mozallowfullscreen" msallowfullscreen="msallowfullscreen" oallowfullscreen="oallowfullscreen" webkitallowfullscreen="webkitallowfullscreen" ></iframe>-->
                            <img class="image2" src="~/css/mbr-testimonials/images/play.png" />
                        </div>                       
                    </div>
                }
                else
                {
                    <figure class="xl-col-5 md-col-6 modal-member-portrait">
                        @Html.Raw(GlassHtml.RenderImage(Model, x => x.DetailTestimonial.ProfileImage, new { width = "284" }, true, false))
                    </figure>
                }
                <div class="xl-col-7 md-col-6"> 
                    <div class="space-between underline-orange modal-member-title mt-lbox-tm">
                        <h2 class="margin-bottom-0">@Model.DetailTestimonial.Category&nbsp;</h2>

                    </div>
                    <div class="per-info">
                        <p>
                            @if (!string.IsNullOrWhiteSpace(Model.DetailTestimonial.Chapter))
                            {
                                <strong>Chapter: @Model.DetailTestimonial.Chapter</strong><br />
                                if (Model.DetailTestimonial.MemberDate != DateTime.MinValue)
                                {
                                    <strong>Member Date:  @Model.DetailTestimonial.MemberDate.ToString("MM-dd-yyyy")</strong>
                                }
                            }
                        </p>
                        <div class="member-social-modal-zone">
                            @if (!string.IsNullOrWhiteSpace(Model.DetailTestimonial.FaceBook))
                            {
                                <p>
                                    <span class="acr-icon text-orange icon-facebook"></span>
                                    <a target="_blank" href="@Model.DetailTestimonial.FaceBook">Facebook</a>

                                </p>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.DetailTestimonial.TwitterHandle))
                            {
                                <p>
                                    <span class="acr-icon text-orange icon-twitter"></span>
                                    <a target="_blank" href="@Model.DetailTestimonial.TwitterHandle">Twitter</a>
                                </p>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.DetailTestimonial.LinkedIn))
                            {
                                <p>
                                    <span class="acr-icon text-orange icon-linkedin"></span>
                                    <a target="_blank" href="@Model.DetailTestimonial.LinkedIn">LinkedIn</a>
                                </p>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.DetailTestimonial.EngageProfile))
                            {
                                <p>
                                    <span class="acr-icon text-orange icon-engage"></span>
                                    <a target="_blank" href="@Model.DetailTestimonial.EngageProfile">Engage Profile</a>
                                </p>
                            }                           
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
                <div class="space-between header-underrule" style="margin:12px 12px 0 12px">
                    <h2 class="margin-bottom-p25">Personal Testimony</h2>
                    <div class="inline-block">
                        <div class="header-share-opts">
                            <a href="#share" class="share-link">
                                Share
                                <div class="share-drawer">
                                    <div class="sharethis-inline-share-buttons" >

                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
                <div class="indented-content-left" style="padding:12px">
                    @Html.Raw(Model.DetailTestimonial.TesimonialMessage)
                </div>
            </div>
        </div>
    </div>
</section>




