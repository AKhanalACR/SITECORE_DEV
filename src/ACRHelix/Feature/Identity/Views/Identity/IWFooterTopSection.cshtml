@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<ACRHelix.Feature.Identity.ViewModels.IWFooterTopSectionViewModel>

<section class="padding-t-0 padding-b-0 darkgrey-bg text-justify text-last-justify">
    <div class="container">
        <div class="ibox-content padding-l-0 padding-r-0 darkgrey-bg">
            <p>@Editable(x => x.IWFooterSection.SectionIntro)</p>
            @if (Model.IWFooterSection.SectionItems.Count() > 0)
            {
                <div class="row">
                    @foreach (var item in Model.IWFooterSection.SectionItems)
                    {
                        <div class="col-xs-6 col-sm-3 col-lg-3">
                            <a href="@item.Link.Url" target="@item.Link.Target">
                                <img alt="@item.Image.Alt" src="@item.Image.Src">
                            </a>
                        </div>
                    }
                </div>
            }            
        </div>
    </div>
</section>
