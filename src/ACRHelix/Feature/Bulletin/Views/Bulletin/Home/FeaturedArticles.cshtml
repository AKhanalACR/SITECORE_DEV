@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<ACRHelix.Feature.Bulletin.Models.Rendering_Models.BulletinHomepageFeaturedArticles>

<div class="flex-l row-adjust bulletin-features">
    @if (Model != null && Model.Articles != null)
    {
        foreach (var article in Model.Articles)
        {
            <div class="xl-col-6 slick-slide">
                @using (BeginEditFrame(article, "Featured Article", x => x.Title, x => x.TileImage, x => x.Topic))
                {
                    <section class="news-slide">
                        <div class="news-box news-box-basic">
                            <div class="news-image" style="background-image: url(@article.TileImage.Src)">
                                <a class="news-image-anchor" href="@article.Url" tabindex="-1" aria-hidden="true">
                                    <div class="news-type-tag">@article.Topic.Name</div>
                                </a>
                            </div>
                            <footer>
                                <a href="@article.Url" class="bulletin-title" tabindex="0">
                                    @article.Title
                                    <i class="read-more-arrow" aria-hidden="true"></i>
                                </a>
                            </footer>
                        </div>
                    </section>
                }
            </div>
        }
    }
</div>