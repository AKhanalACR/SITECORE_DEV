@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<ACRHelix.Feature.Bulletin.Models.Rendering_Models.TrendingArticles>

<div class="section-borders bg-blue-gradient-vert inverse-text">
    <div class="content section-spacing-top">
        <h1>@Editable(x => x.Title)</h1>
    </div>
    <div class="content row spaced-item-area-s2 flex-center section-spacing-bottom">

        @foreach (var article in Model.Articles)
        {
            string linkText = (string.IsNullOrWhiteSpace(article.TileLinkText) ? article.Title : article.TileLinkText);
            <aside class="bulletin-trending-article xl-col-4 md-col-12 lg-col-6 spaced-item">
                <figure class="bulletin-trending-img">
                    @RenderImage(article, x => x.TileImage)
                </figure>
                <div class="inline-block">
                    <p>@Html.Raw(article.TileText)</p>
                    <a href="@article.Url" class="read-more-link sky-blue-link">@linkText</a>
                </div>
            </aside>
        }
    </div>
</div>