@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<ACRHelix.Feature.PageContent.Models.SideContent>

<div class="content section-spacing">
    <div class="row indented-section" style="padding-right:0px">
        <!--start: Module -->
        <div class="xl-col-8 lg-col-7">
            <div class="text-content" >
                @if (Sitecore.Context.PageMode.IsExperienceEditor || !string.IsNullOrWhiteSpace(Model.SectionTitle))
                {
                    <h2>@Editable(Model, x => x.SectionTitle)</h2>
                }

                @Editable(Model, x => x.LeftText)
            </div>
        </div>
        <div class="xl-col-30pct lg-col-5 fl-right">
            <div class="box in-content-callout" style="max-width:100%">
                <div class="text-content line-height-extra" >
                    @Editable(Model, x => x.RightRext)
                </div>
            </div>
        </div>
        <!--end: Module -->
    </div>
</div>