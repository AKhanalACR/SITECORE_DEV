            function getSearchedTerm() {
                var hash = window.location.hash;
                var term = '';
                if (hash.indexOf('q=') > 0) {
                    var and = hash.indexOf('&');

                    if (and > 0) {
                        term = hash.substring(3, and);
                    } else {
                        term = hash.substring(3);
                    }
                }
                return term;
            }
