                            })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

                            ga('create', gaid, 'auto');
                        }
                        var pageUrl = searchUrl + '?q=' + query;
                        ga('set', 'page', pageUrl);
                        ga('send', 'pageview');
                        console.log('search event sent to GA: ' + searchUrl + '?q=' + query);
                    }
                </script>
