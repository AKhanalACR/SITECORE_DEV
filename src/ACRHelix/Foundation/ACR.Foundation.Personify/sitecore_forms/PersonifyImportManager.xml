<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <xmlPersonifyImportManager>
    <FormDialog Icon="Business/32x32/calendar.png" Header="Refresh Products"
								Text="Click &quot;Import&quot; to refresh product stubs and taxonomy items from Personify."
								OKButton="Close" CancelButton="false">
      <CodeBeside Type="ACR.Foundation.Personify.SitecoreForms.PersonifyImportManager,ACR.Foundation.Personify"/>
      <Literal id="litStatus" />
      <br/>
      <br/>
      <Literal id="litLatest" Text="Click &quot;Import Latest&quot; to refresh all product stubs updated since the last completed import.&lt;br/&gt;">
      </Literal>
      <br/>
      <Button id="btnRefreshProductsLatest" Click="refreshProducts:latest" style="width: 100px;">
        <b>Import Latest</b>
      </Button>
      <br/>
      <br/>
      <br/>
      <Literal id="litAll" Text="Click &quot;Import All&quot; to refresh all product stubs and taxonomy items.&lt;br/&gt;NOTE: This process can take several hours.&lt;br/&gt;">
      </Literal>
      <br/>
      <Button id="btnRefreshProductsAll" Click="refreshProducts:all" style="width: 100px;" >
        <b>Import All</b>
      </Button>

    </FormDialog>
  </xmlPersonifyImportManager>
</control>