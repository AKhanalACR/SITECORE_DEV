<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <xmlViewAllExpressUrlApp>
    <FormDialog Icon="Business/24x24/address_book_edit.png" Header="Express URLs" Text="View all Express URLs.  Double click item to add/remove Express URLs." OKButton="Close" CancelButton="false">
			<CodeBeside Type="ACR.Foundation.ExpressUrls.ViewExpressURLCodeBeside,ACR.Foundation.ExpressUrls"/>

      <GridPanel Width="100%" Height="100%" GridPanel.Height="100%">

        <Border Width="100%" Height="100%" align="Center">
          <Toolbar>
            <Toolbutton  ID="DeleteButton" Header="Delete Selected Url" Icon="Applications/32x32/delete.png" Click="velir:deleteExpressUrl" Visible="false" />
          </Toolbar>

          <Listview ID="ExpressUrlList" View="Details" Width="100%" Background="white" Click="velir:enableDeleteButton" DblClick="velir:addexpressurl">
            <ListviewHeader>
              <ListviewHeaderItem Name="itemName" Header="Item Path" />
              <ListviewHeaderItem Name="expressUrl" Header="Express Url" />
            </ListviewHeader>
          </Listview>
        </Border>

      </GridPanel>

    </FormDialog>
  </xmlViewAllExpressUrlApp>
</control>
