<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
	<xmlExpressUrlApp>
		<FormDialog Icon="Business/24x24/address_book_add.png" Header="Express URLs" Text="Add or remove Express URLs for the current item.  URLs should be root relative, such as /nameofurl.  Once added, the Express URL is immediately active, publishing the item is not necessary." OKButton="Close" CancelButton="false">

			<!--<CodeBeside Type="Velir.SitecorePlugins.ExpressURL.ExpressUrlAppCodeBeside,Velir.SitecorePlugins"/>-->
      <CodeBeside Type="ACR.Foundation.ExpressUrls.ExpressUrlAppCodeBeside,ACR.Foundation.ExpressUrls"/>
			<GridPanel Columns="2" CellPadding="4" Width="100%" Height="100%">

				<GridPanel Columns="2" CellPadding="4" Width="100%" Height="100%">
					<Border>
						<Literal Text="Redirected Url:" />	
					</Border>
					
					<Border GridPanel.Width="100%">
						<Edit ID="NewExpressUrl" Width="100%" />
					</Border>

					<Border>
						<Literal Text="Query String:" />
					</Border>
					<Border GridPanel.Width="100%">
						<Edit ID="NewQueryString" Width="100%" />
					</Border>
				</GridPanel>

				<Border>
					<Button ID="Add" Header="Add" Click="Add_Click"/>
				</Border>

				<Border Height="100%" GridPanel.Height="100%" GridPanel.VAlign="top" GridPanel.Width="100%">
					<Listbox ID="List" Height="100%" Width="100%" Size="8" Multiple="true"/>
				</Border>

				<Border Height="100%" GridPanel.Height="100%" GridPanel.VAlign="top">
					<Button ID="Remove" Header="Remove" Click="Remove_Click"/>
				</Border>

			</GridPanel>

		</FormDialog>
	</xmlExpressUrlApp>
</control>
