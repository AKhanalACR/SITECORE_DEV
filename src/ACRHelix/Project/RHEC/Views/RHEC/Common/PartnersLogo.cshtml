@using Glass.Mapper.Sc.Web.Mvc
@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<RHEC.Website.ViewModels.PartnersLogoViewModel>

@{
    int itemCount = Model.Partners.Count();
}
@if (itemCount > 0)
{
    foreach (var item in Model.Partners)
    {
        if (item.Image != null)
        {
            using (BeginRenderLink(item, x => x.Link, isEditable: true))
            {
                @RenderImage(item, m => m.Image, new { @class = "org-logo" }, isEditable: true)
            }
        }
    }
}

