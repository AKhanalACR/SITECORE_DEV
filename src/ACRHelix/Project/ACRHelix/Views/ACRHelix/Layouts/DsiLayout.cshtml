@using Sitecore.Foundation.Assets.Services
@using Sitecore.Foundation.Assets.Models
@using Sitecore.Mvc.Analytics.Extensions
@using ACR.Foundation.SSO.Users;

@inherits WebViewPage
@{Layout = null;}
<!DOCTYPE html>
<html class="no-js">
<head>

    <!-- Default Meta Tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Html.Sitecore().VisitorIdentification()
    @if (!Sitecore.Context.PageMode.IsExperienceEditor)
    {
        @Html.Sitecore().Placeholder("html-head")
    }
    @RenderAssetsService.Current.RenderVersionedCSS(ScriptLocation.Head)
    @RenderAssetsService.Current.RenderRawAssetsHead(ScriptLocation.Head)
    @RenderAssetsService.Current.RenderStyles(ScriptLocation.Head)
    @if (Sitecore.Context.PageMode.IsExperienceEditor)
    {
        <!-- Fix Header only in Experience Editor Mode -->
        <style type="text/css">
            #site-header-outer {
                top: 0px;
                margin-top: 140px;
            }
        </style>
        <!-- End Fix Header -->
    }
    <link href="/sitecore modules/Web/ExperienceForms/css/Custom.css" rel="stylesheet" />
    <script src="/sitecore modules/Web/ExperienceForms/scripts/jquery-2.1.3.min.js"></script>
</head>
<body class="@(Sitecore.Context.PageMode.IsNormal ? "" : (Sitecore.Context.PageMode.IsExperienceEditor ? "pagemode-edit" : "pagemode-preview"))">
    <!-- BEGIN NOINDEX -->
    @RenderAssetsService.Current.RenderBodyAssets(ScriptLocation.Body)
    @Html.Sitecore().Placeholder("header")
    <!-- END NOINDEX -->
    <main role="main">
        @Html.Sitecore().Placeholder("dsi-content")
    </main>
    <!-- BEGIN NOINDEX -->
    @*<aside class="bg-acr-blue" id="footer-newsletter">
        <div class="content row">
            <div class="xl-col-5 xl-text-right md-text-left text-center">
                <h2>Sign Up for News</h2>
            </div>
            <div class="xl-col-7 xl-text-left text-center">
                <div class="news-letter-form">
                    <input id="newsletter-email-tb" type="text" placeholder="Enter Your Email Address">
                    <input id="newsletter-submit-btn" type="submit" value="Submit">
                </div>
            </div>
        </div>
    </aside>*@
    <!-- END NOINDEX -->
    <!-- BEGIN NOINDEX -->
    @Html.Sitecore().Placeholder("footer")
    @RenderAssetsService.Current.RenderVersionedJs(ScriptLocation.Body)
    @RenderAssetsService.Current.RenderScript(ScriptLocation.Body)
    <!-- END NOINDEX -->
</body>
</html>